<main class="container my-5 b-5 fw-bold justify-content-center">
  <div id="pollsContainer">
    {{! render all polls from the database on the main page }}
    {{#each polls}}
      <div class="card bg-info-subtle mt-4 p-3 rounded-4 shadow-lg">
        <div class="card-header --bs-body-color bg-secondary text-white">
          <div class="row align-items-center">
            <div class="h3 col-7 text-start"><a
                class="text-white"
                href="/poll/{{id}}"
              >{{question}}</a>
            </div>
            <div class="col text-end">
              <span class="me-2">Polled on: {{format_date date_created}}</span>
              <button
                class="deletePoll btn btn-danger"
                type="button"
                data-delete="{{id}}"
              >
                <i class="fas fa-trash-alt"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <div id="addPollContainer" class="container-fluid">
    <h1>Create a New Poll</h1>

    <form id="new-poll-form" action="/create-poll" method="POST">

      <div class="input-group mb-3">
        <span class="input-group-text">Poll</span>
        <input
          id="question"
          type="text"
          class="form-control"
          placeholder="Insert poll here"
          aria-label="poll title"
          required
        />
      </div>
      <div class="input-group mb-3 col-6">
        <span class="input-group-text">Number of Choices</span>
        <input
          id="num-choices"
          type="number"
          class="form-control"
          min="2"
          value="2"
          aria-label="poll options"
          required
        />
      </div>

      <div id="choices-container">
        <!-- Choices will be added here -->
      </div>
      <br />

      <div class="row justify-content-center align-items-center">
        <div class="form-group my-3 text-center">
          <button
            class="btn btn-primary custom-btn col-6"
            type="submit"
            id="poll-submit"
          >Create</button>
        </div>
      </div>

    </form>
  </div>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <button class="col-6 btn btn-primary" type="button" id="addPoll">+ Add
        Poll</button>
    </div>
  </div>

</main>
<script src="/js/profile.js"></script>