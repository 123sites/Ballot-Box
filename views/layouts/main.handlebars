</head>

<body class='bg-info-subtle'>
  <nav class='navbar navbar-expand p-0 m-0'>
    <div class='container-fluid bg-dark text-white'>
      <a class='navbar-brand text-white fs-2' href='/'>TB</a>
      <div class='collapse navbar-collapse' id='navbarNav'>
        <ul class='navbar-nav'>
          <li class='nav-item'>
            <a class='nav-link text-white fs-4' href='/'>Home</a>
          </li>
          <!-- Conditionally render login or logout links -->
          {{#if loggedIn}}
          <li class='nav-item'>
            <a class='nav-link text-white fs-4' href='/dashboard/{{user_id}}'>Dashboard</a>
          </li>
          <li class='nav-item'>
            <button class='nav-link text-white fs-4' id='logout'>Logout</button>
          </li>
          {{/if}}
          {{#unless loggedIn}}
          <li class='nav-item'>
            <a href='/login' class='nav-link text-white fs-4' id='login'>Login</a>
          </li>
          {{/unless}}
        </ul>
      </div>
    </div>
  </nav>

  {{{body}}}
</body>
<!-- Render script for logged in users only -->
{{#if loggedIn}}
<script src='/js/logout.js'></script>
{{/if}}
<a href="./poll-create.handlebars" class="btn btn-success">Create a Poll</a>
