<main class="container container-fluid d-flex justify-content-evenly mt-5">
  <div class="card bg-info-subtle rounded-3 w-75 h-auto">
    <header class="card-header bg-secondary text-white">
      <div class="row">
        <h2 class="h2 col-12 text-white" id="login-title">
          Login
        </h2>
      </div>
    </header>
    <div class="card-body shadow-lg">
      <div class="row align-center p-1">
        <form class="form login-form">
          <div class="form-group h4 fw-bold m-3">
            <label for="username-login">Username:</label>
            <input
              class="form-control form-control-lg"
              type="text"
              id="username-login"
              aria-describedby="usernameHelp"
              placeholder="Enter username"
            />
          </div>

          <div class="form-group h4 fw-bold m-3">
            <label for="password-login">Password:</label>
            <input
              class="form-control form-control-lg"
              type="password"
              id="password-login"
              placeholder="Password"
            />
          </div>

          <div
            class="login d-flex flex-column flex-md-row justify-content-center align-items-center"
          >

            <button
              class="col-4 col-md mx-2 button btn btn-primary fw-bold"
              style="letter-spacing: 1px;"
              type="submit"
            >Login</button>

            <button
              class="col-4 col-md mx-2 button btn btn-primary"
              type="signup"
            ><a
                class="justify-content-center m-0"
                style="letter-spacing: 1px;"
                href="/account/signup"
              >Sign-Up</a></button>

            <div class="col-4 col-12-md hand d-flex justify-content-right w-40">
              <img
                src="/images/Ballot-Hand.png"
                class="img-fluid"
                alt="A person putting their ballot into a box."
              />
            </div>
          </div>
        </form>

      </div>
    </div>
  </div>
</main>

<script src="/js/login.js"></script>