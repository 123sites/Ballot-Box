<main class="container d-flex justify-content-evenly mt-5">
  <div class="row">
    <div class="card bg-info-subtle rounded-3 col-sm-12">
      <header class="card-header bg-secondary text-white">
        <div class="row">
          <h2 class="h2 col-12 text-white" id="login-title">
            Login
          </h2>
        </div>
      </header>
      <div class="card-body shadow-lg">
        <div class="row align-center p-1">
          <form class="form login-form">
            <div class="form-group h4 fw-bold m-3">
              <label for="username-login">Username:</label>
              <input
                class="form-control form-control-lg"
                type="text"
                id="username-login"
                aria-describedby="usernameHelp"
                placeholder="Enter username"
              />
            </div>

            <div class="form-group h4 fw-bold m-3">
              <label for="password-login">Password:</label>
              <input
                class="form-control form-control-lg"
                type="password"
                id="password-login"
                placeholder="Password"
              />
            </div>

            <div class="login d-flex justify-content-center align-items-center">
              <div class="form-group col-4">
                <button
                  class="button btn btn-primary btn-lg text-white fw-bold"
                  type="submit"
                >Login</button>
              </div>

              <div class="col-4">
                <button
                  class="button btn btn-primary btn-lg text-white fw-bold"
                  type="submit"
                ><a
                    class="text-white"
                    href="/account/signup"
                  >Sign-Up</a></button>

              </div>
              <div class="hand col-4">
                <img
                  src="/images/Ballot-Hand.png"
                  class="img-fluid"
                  alt="A person pointing their finger at the Submit button."
                />
              </div>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>
</main>
<script src="/js/login.js"></script>